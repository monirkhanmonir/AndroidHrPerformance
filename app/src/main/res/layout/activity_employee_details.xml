<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/employeeDetails"
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="30dp"
        android:divider="@color/colorPrimaryDark"
        android:gravity="left"
        android:padding="10dp">

        <TableRow android:layout_margin="6dp">
            <TextView
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:text="Employee Id:"
                android:textSize="22sp"
                android:textColor="#fff"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/employeeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold|italic" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:text="Employee Name: "
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/employeeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold|italic" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address: "
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/employeeEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold|italic" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name: "
                android:textSize="22sp"
                android:textColor="#fff"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/employeeUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold|italic" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender: "
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/employeeGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold|italic" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Designation: "
                android:textSize="22sp"
                android:textColor="#fff"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold|italic" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:textSize="22sp"
                android:textColor="#fff"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="18sp"
                android:textColor="#fff"
                android:textStyle="bold|italic" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Date Of Birth:"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/employeeDob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="18sp"
                android:textColor="#fff"
                android:textStyle="bold|italic" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join Date: "
                android:textSize="22sp"
                android:textColor="#fff"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/joinDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold|italic" />
        </TableRow>
    </TableLayout>
</LinearLayout>