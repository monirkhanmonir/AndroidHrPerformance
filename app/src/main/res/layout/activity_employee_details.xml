<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">    <TableLayout
    android:id="@+id/employeeDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="30dp"
    android:layout_marginHorizontal="10dp"
    android:gravity="left"
    android:divider="@color/colorPrimaryDark"
    android:padding="10dp"
    android:background="#CDDC39
">
    <TableRow
        android:layout_margin="5dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee ID"
            android:textStyle="bold|italic"
            android:layout_weight="1"
            android:textSize="14sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/employeeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Name"
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/employeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/employeeEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/employeeUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/employeeGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Designation"
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Of Birth"
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/employeeDob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Date"
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/joinDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold|italic"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"/>
    </TableRow>
</TableLayout>
</LinearLayout>